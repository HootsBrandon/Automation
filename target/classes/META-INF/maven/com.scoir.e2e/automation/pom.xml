<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>com.scoir.e2e</groupId>
	<artifactId>automation</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<name>Automation</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.20.1</version>
				<configuration>
				<!-- Tells Maven what TestNG files to look for the test in. Will be broken down by User type. -->
					<suiteXmlFiles>
						<suiteXmlFile>StudentLogin.xml</suiteXmlFile>
						<suiteXmlFile>ParentLogin.xml</suiteXmlFile>
						<suiteXmlFile>TeacherLogin.xml</suiteXmlFile>
						<suiteXmlFile>CounselorLogin.xml</suiteXmlFile>
						<suiteXmlFile>AdminLogin.xml</suiteXmlFile>
					</suiteXmlFiles>
					<!-- Ends Xml Files -->
					
					<!-- Tells Maven what group of test to run. Multiple groups can be added by using a , after Regression. 
					Regression is the default and will run all tests. Current groups: Regreesion, Failure -->
					<groups>Regression</groups>
					<!-- Ends group -->
					
					<!-- Defines properties for Listeners -->
					<properties>d
						<property>
							<name>usedefaultlisteners</name>
							<value>false</value> <!-- disabling default listeners is optional -->
						</property>
						<property>
							<name>listener</name>
							<value>/automation/src/main/java/baseObjects/Listener.java</value>
						</property>
						<property>
							<name>reporter</name>
							<value>listenReport.Reporter</value>
						</property>
					</properties>
					<!-- Ends Listerns -->
					
					<!--  Sets the count for test to run parrallelly -->
					<parallel>methods</parallel>
         			<threadCount>10</threadCount>
         			<!-- Ends parallel count -->
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<!-- https://mvnrepository.com/artifact/org.testng/testng -->
		<dependency>
			<groupId>org.testng</groupId>
			<artifactId>testng</artifactId>
			<version>6.13.1</version>
			<scope>test</scope>
		</dependency>
		<!-- https://mvnrepository.com/artifact/org.seleniumhq.selenium/selenium-java -->
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-java</artifactId>
			<version>3.8.1</version>
		</dependency>
		<dependency>
			<groupId>org.apache.maven.plugins</groupId>
			<artifactId>maven-surefire-plugin</artifactId>
			<version>2.20.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>
